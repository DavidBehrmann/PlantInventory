@model IEnumerable<PlantInventory.Models.HerbModels.HerbDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Plant Inventory</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.HerbName)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.HerbName)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "EditHerb", new { id=item.HerbId}) |
            @Html.ActionLink("Details", "Index", "Batch", new { id = item.HerbId }, null)
        </td>
    </tr>
}

</table>
