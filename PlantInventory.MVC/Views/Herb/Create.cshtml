@model PlantInventory.Models.HerbModels.HerbCreate

@{
    ViewBag.Title = "Create";
}

<h2>Add a new Product</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <p>Please use the companies official product name.</p>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <h9>Product Name</h9>
        <div class="col-md-10">
            @Html.EditorFor(model => model.HerbName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HerbName, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
    <br />
    <br />
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index",null, new { @class = "btn btn-secondary" })
</div>
