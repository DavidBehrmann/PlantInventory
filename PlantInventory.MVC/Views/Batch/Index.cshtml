@model IEnumerable<PlantInventory.Models.BatchModels.BatchDetail>

@{
    ViewBag.Title = "Index";
}

<h2>@Html.Action("GetHerbNameForBatchIndexView") Inventory</h2>

<p>
    @Html.ActionLink("Received New Delivery", "Create", null, new { @class = "btn btn-success" })
</p>
<div>
    @Html.ActionLink("Back to Inventory", "Index", "Herb", null, new { @class = "btn btn-secondary" })
</div>
<table class="table">
    <tr>

        <th>
            Product
        </th>
        <th>
            Date Received
        </th>


        <th>
            Total Received
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Action("GetHerbNameForBatchIndexView")
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DateReceived.Date)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TotalPotCount)
            </td>


            <td>
                @Html.ActionLink("Edit", "EditBatch", new { id = item.BatchId }, new { @class = "btn btn-outline-secondary" }) |
                @Html.ActionLink("Details", "GetBatchByID", new { id = item.BatchId }, new { @class = "btn btn-outline-info" }) |
                @Html.ActionLink("Move Plants", "Create", "Move", new { id = item.BatchId }, new { @class = "btn btn-success" })

            </td>
        </tr>

    }
    
</table>
<p>
    @Html.ActionLink("Received New Delivery", "Create", null, new { @class = "btn btn-success" })
</p>
<div>
    @Html.ActionLink("Back to Inventory", "Index", "Herb", null, new { @class = "btn btn-secondary" })
</div>


